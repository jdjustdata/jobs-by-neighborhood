{
  "addons": [
    "papertrail",
    "heroku-postgresql"
  ],
  "buildpacks": [
    {
      "url": "heroku/python"
    },
    {
      "url": "https://github.com/grauwoelfchen/heroku-buildpack-gettext.git"
    }
  ],
  "description": "A hyper-local job search application, founded in Chicago, IL",
  "scripts": {
    "postdeploy": "pg_dump $DATABASE_URL | psql $DATABASE_URL && python manage.py makemigrations && python manage.py migrate"
  },
  "env": {
    "ADMINS": {
      "required": true
    },
    "DATABASE_URL": {
      "required": true
    },
    "DEBUG_COLLECTSTATIC": {
      "required": true
    },
    "DJANGO_SETTINGS_MODULE": {
      "required": true
    },
    "LANG": {
      "required": true
    },
    "MAPBOX_KEY": {
      "required": true
    },
    "PAPERTRAIL_API_TOKEN": {
      "required": true
    },
    "SECRET_KEY": {
      "required": true,
      "generator": "secret"
    }
  },
  "formation": {
    "web": {
      "quantity": 1
    }
  },
  "worker": {
    "quantity": 1
  },
  "name": "jobs-by-neighborhood",
  "scripts": {
  },
  "stack": "container"
}
